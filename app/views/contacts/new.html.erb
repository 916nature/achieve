<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">

    <p id="notice"><%= notice %></p>

    <%= form_for(@contact, url: confirm_contacts_path) do |f| %>
      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <% # バリデーションエラーの件数を表示します。%>
          <h2><%= @contact.errors.count %>件のエラーがあります。</h2>

          <ul>
          <% # @contact.errorsは@contactをバリデーションした際のエラー情報です。
          # full_messagesは複数のエラーメッセージを表します。%>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form-control' %>
      <br>
      <%= f.label :アドレス %>
      <%= f.email_field :email, class: 'form-control' %>
      <br>
      <%= f.label :内容 %>
      <%= f.text_field :content, class: 'form-control' %>
      <br>
      <%= f.submit '問い合わせ', class: 'btn btn-primary btn-block' %>
    <% end %>
    <br>
    <br>
    <%= link_to "ブログ一覧画面にもどる", blogs_path %>
  </div>
</div>